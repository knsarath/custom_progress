<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0" android:pivotX="50%" android:pivotY="50%"
        android:toDegrees="360">
    <shape android:innerRadiusRatio="3" android:shape="ring"
           android:thicknessRatio="15" android:useLevel="false">
        <size android:width="200dp" android:height="200dp"/>
        <gradient android:angle="0" android:centerColor="#D0323C"
                  android:endColor="#D0323C"
                  android:startColor="@android:color/white"
                  android:type="sweep"
                  android:useLevel="false"/>
    </shape>
</rotate>
